#: import menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/bg1small.jpg"  # background image

    menu_widget:menu_widget  # permet assigner objet vers .py
    # lie a variable perspective_point_x du .py
    perspective_point_x: self.width / 2
    perspective_point_y: self.height * 0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: "fonts/Eurostile.ttf"
        pos_hint: {"x": 0, "top": 1}
        size_hint: .18, .18