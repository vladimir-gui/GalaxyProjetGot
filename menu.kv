
<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: root.parent.menu_title
        pos_hint: { "center_x" : .5, "center_y" : .6}
    Button:
        text: root.parent.menu_button_title
        pos_hint: { "center_x" : .5, "center_y" : .4}
        size_hint: .2, .1
        on_press: root.parent.on_menu_button_pressed()  # parent pour mettre directement dans main.py